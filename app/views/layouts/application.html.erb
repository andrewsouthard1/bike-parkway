<!DOCTYPE html>
<html>
  <head>
    <title>BikeParkway</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Comfortaa|Open+Sans" rel="stylesheet">
    <script src="https://use.fontawesome.com/754873ed00.js"></script>
  </head>

  <body>
  <nav class="navbar">
    <a class="navbar-brand header-font" href="#">Bike Parkway </a>
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <i class="fa fa-bicycle fa-3x dropdown-toggle bike-icon" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"></i>
          <ul class="dropdown-menu">
            <% if current_user %>
            <li><a href="#">Log Out</a></li>
            <% else %>
            <li><a href="#">Log In</a></li>
            <li><a href="#">Sign Out</a></li>    
            <% end %>
          </ul>
        </li>
    </ul>
  </nav>
    <%= yield %>
  </body>


</html>
